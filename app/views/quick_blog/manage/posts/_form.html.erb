<%= stylesheet_link_tag "trix" %>
<%= javascript_include_tag "trix", "actiontext.esm.js" %>

<%= form_for [:manage, @post], multipart: true do |form| %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  
  <div>
    <%= form.label :slug %>
    <%= form.text_field :slug %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.rich_textarea :body %>
  </div>

  <%= form.submit "Save" %>
<% end %>
